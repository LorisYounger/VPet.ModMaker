<UserControl
  x:Class="VPet.ModMaker.Views.ModEdit.FoodPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:ll="clr-namespace:LinePutScript.Localization.WPF;assembly=LinePutScript.Localization.WPF"
  xmlns:local="clr-namespace:VPet.ModMaker.Views.ModEdit"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:pu="https://opensource.panuon.com/wpf-ui"
  xmlns:vm="clr-namespace:VPet.ModMaker.ViewModels.ModEdit"
  d:DataContext="{d:DesignInstance Type=vm:FoodEditVM}"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition />
    </Grid.RowDefinitions>
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition />
        <ColumnDefinition Width="Auto" MinWidth="200" />
        <ColumnDefinition Width="Auto" MinWidth="100" />
      </Grid.ColumnDefinitions>
      <TextBox
        pu:TextBoxHelper.Watermark="{ll:Str 搜索}"
        Style="{StaticResource StandardTextBoxStyle}"
        Text="{Binding Search, UpdateSourceTrigger=PropertyChanged}" />
      <ComboBox
        Grid.Column="1"
        ItemsSource="{Binding SearchTargets, Converter={StaticResource EnumsToEnumInfosConverter}}"
        SelectedItem="{Binding SearchTargets.SelectedItem, Converter={StaticResource EnumToEnumInfoConverter}}"
        Style="{StaticResource StandardComboBoxStyle}"
        ToolTip="{ll:Str 搜索目标}" />
      <Button
        Grid.Column="2"
        Command="{Binding SetReferencePriceForAllFoodCommand}"
        Content="{ll:Str 设置推荐价格}"
        Style="{StaticResource MyThemedButtonStyle}" />
    </Grid>
    <DataGrid
      Grid.Row="1"
      d:ItemsSource="{d:SampleData ItemCount=5}"
      d:SelectedIndex="0"
      pu:DataGridHelper.ColumnHeaderHorizontalContentAlignment="Center"
      pu:DataGridHelper.RowSelectedBorderBrush="{StaticResource DARKPrimaryLight}"
      pu:DataGridHelper.RowSelectedBorderThickness="3"
      AutoGenerateColumns="False"
      CanUserAddRows="False"
      CanUserDeleteRows="False"
      GridLinesVisibility="Horizontal"
      ItemsSource="{Binding Foods.FilteredList}"
      MouseDoubleClick="DataGrid_MouseDoubleClick"
      RowDetailsVisibilityMode="Visible"
      RowHeight="64"
      VirtualizingStackPanel.IsVirtualizing="True"
      VirtualizingStackPanel.VirtualizationMode="Recycling">
      <DataGrid.RowStyle>
        <Style BasedOn="{StaticResource {x:Type DataGridRow}}" TargetType="DataGridRow">
          <Setter Property="Height" Value="64" />
          <Setter Property="Tag" Value="{Binding}" />
          <Setter Property="ContextMenu" Value="{StaticResource ContextMenu_DataGridRow}" />
        </Style>
      </DataGrid.RowStyle>
      <DataGrid.Columns>
        <DataGridTextColumn
          Binding="{Binding ID}"
          CanUserSort="True"
          ElementStyle="{StaticResource TextBlock_LeftCenter}"
          Header="ID"
          IsReadOnly="True"
          SortMemberPath="ID" />
        <DataGridTemplateColumn Header="{ll:Str 食物图片}" IsReadOnly="True">
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate>
              <Image
                Width="64"
                Height="64"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Source="{Binding Image, IsAsync=True}"
                Stretch="Uniform">
                <Image.ToolTip>
                  <Image
                    Width="256"
                    Height="256"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Source="{Binding Image, IsAsync=True}"
                    Stretch="Uniform" />
                </Image.ToolTip>
              </Image>
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>
        <DataGridTextColumn
          Binding="{Binding Name}"
          CanUserSort="True"
          ElementStyle="{StaticResource TextBlock_LeftCenter}"
          Header="{ll:Str 食物名称}"
          IsReadOnly="True"
          SortMemberPath="Name" />
        <DataGridTextColumn
          Binding="{Binding Type, Converter={StaticResource EnumToEnumInfoConverter}}"
          CanUserSort="True"
          ElementStyle="{StaticResource TextBlock_LeftCenter}"
          Header="{ll:Str 食物类型}"
          IsReadOnly="True"
          SortMemberPath="Type" />
        <DataGridTextColumn
          Binding="{Binding Graph}"
          CanUserSort="True"
          ElementStyle="{StaticResource TextBlock_LeftCenter}"
          Header="{ll:Str 指定动画}"
          IsReadOnly="True"
          SortMemberPath="Type" />
        <DataGridTextColumn
          Binding="{Binding StrengthFood}"
          CanUserSort="True"
          ElementStyle="{StaticResource TextBlock_LeftCenter}"
          Header="{ll:Str 饱腹值}"
          IsReadOnly="True"
          SortMemberPath="StrengthFood" />
        <DataGridTextColumn
          Binding="{Binding StrengthDrink}"
          CanUserSort="True"
          ElementStyle="{StaticResource TextBlock_LeftCenter}"
          Header="{ll:Str 口渴值}"
          IsReadOnly="True"
          SortMemberPath="StrengthDrink" />
        <DataGridTextColumn
          Binding="{Binding Health}"
          CanUserSort="True"
          ElementStyle="{StaticResource TextBlock_LeftCenter}"
          Header="{ll:Str 健康值}"
          IsReadOnly="True"
          SortMemberPath="Health" />
        <DataGridTextColumn
          Binding="{Binding Strength}"
          CanUserSort="True"
          ElementStyle="{StaticResource TextBlock_LeftCenter}"
          Header="{ll:Str 体力值}"
          IsReadOnly="True"
          SortMemberPath="Strength" />
        <DataGridTextColumn
          Binding="{Binding Feeling}"
          CanUserSort="True"
          ElementStyle="{StaticResource TextBlock_LeftCenter}"
          Header="{ll:Str 心情值}"
          IsReadOnly="True"
          SortMemberPath="Feeling" />
        <DataGridTextColumn
          Binding="{Binding Likability}"
          CanUserSort="True"
          ElementStyle="{StaticResource TextBlock_LeftCenter}"
          Header="{ll:Str 好感值}"
          IsReadOnly="True"
          SortMemberPath="Likability" />
        <DataGridTextColumn
          Binding="{Binding Exp}"
          CanUserSort="True"
          ElementStyle="{StaticResource TextBlock_LeftCenter}"
          Header="{ll:Str 经验值}"
          IsReadOnly="True"
          SortMemberPath="Exp" />
        <DataGridTextColumn
          Binding="{Binding Price}"
          CanUserSort="True"
          ElementStyle="{StaticResource TextBlock_LeftCenter}"
          Header="{ll:Str 价格}"
          IsReadOnly="True"
          SortMemberPath="Price" />
        <DataGridTextColumn
          MaxWidth="300"
          Binding="{Binding Description}"
          CanUserSort="True"
          ElementStyle="{StaticResource TextBlock_Wrap}"
          Header="{ll:Str 描述}"
          IsReadOnly="True"
          SortMemberPath="Description" />
      </DataGrid.Columns>
    </DataGrid>
    <Button
      Grid.Row="1"
      HorizontalAlignment="Right"
      VerticalAlignment="Bottom"
      Command="{Binding AddCommand}"
      Content="➕"
      Style="{StaticResource AddButton}" />
  </Grid>
</UserControl>
