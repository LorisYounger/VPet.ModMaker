                </Setter>
                <Setter Property="Margin">
                  <Setter.Value>
                    <MultiBinding Converter="{StaticResource RatioMarginConverter}">
                      <Binding Path="LengthRatio" />
                      <Binding Path="Pet.TouchBodyRect.X" />
                      <Binding Path="Pet.TouchBodyRect.Y" />
                    </MultiBinding>
                  </Setter.Value>
                </Setter>
              </Style>
            </Label.Style>
          </Label>
