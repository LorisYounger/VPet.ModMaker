              <Grid
                Grid.Row="1"
                Grid.Column="1"
                Margin="5">
                <Grid.RowDefinitions>
                  <RowDefinition />
                  <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="Auto" />
                  <ColumnDefinition />
                  <ColumnDefinition Width="Auto" />
                  <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label Background="{x:Null}" Content="x:" />
                <pu:NumberInput Grid.Column="1" Value="{Binding Pet.RaisePoint.Nomal.X, Mode=TwoWay}" />
                <Label
                  Grid.Column="2"
                  Background="{x:Null}"
                  Content="y:" />
                <pu:NumberInput Grid.Column="3" Value="{Binding Pet.RaisePoint.Nomal.Y, Mode=TwoWay}" />
              </Grid>
              <ToggleButton
                x:Name="ToggleButton_RaisePoint_PoorCondition"
                Grid.Row="2"
                Padding="5"
                HorizontalContentAlignment="Stretch"
                Content="{ll:Str 低状态}" />
              <Grid
                Grid.Row="2"
                Grid.Column="1"
                Margin="5">
                <Grid.RowDefinitions>
                  <RowDefinition />
                  <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="Auto" />
                  <ColumnDefinition />
                  <ColumnDefinition Width="Auto" />
                  <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label Background="{x:Null}" Content="x:" />
                <pu:NumberInput Grid.Column="1" Value="{Binding Pet.RaisePoint.PoorCondition.X, Mode=TwoWay}" />
                <Label
                  Grid.Column="2"
                  Background="{x:Null}"
                  Content="y:" />
                <pu:NumberInput Grid.Column="3" Value="{Binding Pet.RaisePoint.PoorCondition.Y, Mode=TwoWay}" />
              </Grid>
              <ToggleButton
                x:Name="ToggleButton_RaisePoint_Ill"
                Grid.Row="3"
                Padding="5"
                HorizontalContentAlignment="Stretch"
                Content="{ll:Str 生病状态}" />
              <Grid
                Grid.Row="3"
                Grid.Column="1"
                Margin="5">
                <Grid.RowDefinitions>
                  <RowDefinition />
                  <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="Auto" />
                  <ColumnDefinition />
                  <ColumnDefinition Width="Auto" />
                  <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label Background="{x:Null}" Content="x:" />
                <pu:NumberInput Grid.Column="1" Value="{Binding Pet.RaisePoint.Ill.X, Mode=TwoWay}" />
                <Label
                  Grid.Column="2"
                  Background="{x:Null}"
                  Content="y:" />
                <pu:NumberInput Grid.Column="3" Value="{Binding Pet.RaisePoint.Ill.Y, Mode=TwoWay}" />
              </Grid>
            </Grid>
          </Expander>
        </StackPanel>
      </ScrollViewer>
      <Grid Grid.Row="1">
        <Grid.ColumnDefinitions>
          <ColumnDefinition />
          <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Button
          x:Name="Button_Yes"
          Margin="10"
          Click="Button_Yes_Click"
          Content="{ll:Str 确定}"
          Style="{DynamicResource ThemedButtonStyle}" />
        <Button
          x:Name="Button_Cancel"
          Grid.Column="1"
          Margin="10"
          Click="Button_Cancel_Click"
          Content="{ll:Str 取消}"
          Style="{DynamicResource Button_Cancel}" />
      </Grid>
    </Grid>
    <ListBox Grid.Column="2" Template="{StaticResource ListBox_ShowLangs}" />
  </Grid>
</Window>
